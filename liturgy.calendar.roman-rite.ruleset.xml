  <liturgicalday>
    <template>
     <name>Feast of the Holy Family</name>
      <season>Christmas season</season>
      <rank>Feast</rank>
      <precedence>5</precedence>
      <daterules>
        <if>
          <test>
            <test-day day="Sunday">
              <relative-to name="Christmas"/>
            </test-day>
          </test>
          <then>
            <date day="30" month="12"/>
          </then>
          <else>
            <weekday-after day="Sunday">
              <relative-to name="Christmas"/>
            </weekday-after>
          </else>
        </if>
      </daterules>
    </template>
  </liturgicalday>

