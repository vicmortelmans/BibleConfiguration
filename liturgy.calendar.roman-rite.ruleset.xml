      <precedence>9</precedence>
      <daterules>
        <days-after nr="$nr_i">
          <relative-to name="Christmas"/>
        </days-after>
      </daterules>
    </template>
  </liturgicalday>
  
<!-- 
     WEEKDAYS OF CHRISTMAS SEASON
                                  -->

  <liturgicalday>
